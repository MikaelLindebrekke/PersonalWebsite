<h2>Film Archive</h2>

<div>
  <a href="/filmroulette">Film Roulette</a>
</div>
<div>
  <a href="/films/new">Add new Film</a>
</div>
<div>
  <a href="/films/archive">See Films added by other users</a>
</div>

<h3>Search Films</h3>
<form action="/films" method="GET">
  <label>Title</label>
  <input type="text" name="title" value="<%= searchOptions.title %>">
  <button type="submit">Search</button>
</form>

<br>

<% films.forEach(film => { %>
  <div><%= film.title %></div>
  <div>
    <a href="/films/<%= film.id%>">View</a>
    <a href="/films/<%= film.id%>/edit">Edit</a>
    <%- include('../partials/deleteForm.ejs', { url: `/films/${film.id}`}) %>
  </div>
<% }) %>

<%- include('../partials/userInfo.ejs') %>
